<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.weishengming.dao.mapper.BangZhuMapper">
	<sql id="all_columns">
		ID,CREATEDATE,UPDATEDATE,VERSION,BIAOTI,DIXIONGZIMEIID,DIXIONGZIMEIXINGMING,LEIXING,NEIRONG,NICKNAME,OPENID,ZHUANGTAI
	</sql>
	<sql id="where">
		<where>
			<if test="id != null">
				and ID = #{id}
			</if>
			<if test="createDate != null">
				and CREATEDATE = #{createDate}
			</if>
			<if test="updateDate != null">
				and UPDATEDATE = #{updateDate}
			</if>
			<if test="version != null">
				and VERSION = #{version}
			</if>
			<if test="biaoti != null">
				and BIAOTI = #{biaoti}
			</if>
			<if test="dixiongzimeiid != null">
				and DIXIONGZIMEIID = #{dixiongzimeiid}
			</if>
			<if test="dixiongzimeixingming != null">
				and DIXIONGZIMEIXINGMING = #{dixiongzimeixingming}
			</if>
			<if test="leixing != null">
				and LEIXING = #{leixing}
			</if>
			<if test="neirong != null">
				and NEIRONG = #{neirong}
			</if>
			<if test="nickname != null">
				and NICKNAME = #{nickname}
			</if>
			<if test="openID != null">
				and OPENID = #{openID}
			</if>
			<if test="zhuangtai != null">
				and ZHUANGTAI = #{zhuangtai}
			</if>
		</where>
	</sql>
	<sql id="orderById"> ORDER BY ID DESC </sql>
	<insert id="insert" useGeneratedKeys="true" keyProperty="id"
		parameterType="BangZhuDO">
		INSERT INTO bangzhu (
		<include refid="all_columns" />
		) VALUES
		(#{id},#{createDate},#{updateDate},#{version},#{biaoti},#{dixiongzimeiid},#{dixiongzimeixingming},#{leixing},#{neirong},#{nickname},#{openID},#{zhuangtai})
	</insert>
	<update id="update" parameterType="BangZhuDO">
		UPDATE bangzhu SET
                    <![CDATA[ ID = #{id}]]>,   
                    <![CDATA[ CREATEDATE = #{createDate}]]>,   
                    <![CDATA[ UPDATEDATE = #{updateDate}]]>,   
                    <![CDATA[ VERSION = #{version}]]>,   
                    <![CDATA[ BIAOTI = #{biaoti}]]>,   
                    <![CDATA[ DIXIONGZIMEIID = #{dixiongzimeiid}]]>,   
                    <![CDATA[ DIXIONGZIMEIXINGMING = #{dixiongzimeixingming}]]>,   
                    <![CDATA[ LEIXING = #{leixing}]]>,   
                    <![CDATA[ NEIRONG = #{neirong}]]>,   
                    <![CDATA[ NICKNAME = #{nickname}]]>,   
                    <![CDATA[ OPENID = #{openID}]]>,   
                    <![CDATA[ ZHUANGTAI = #{zhuangtai}]]>,
		version = version+1 WHERE
		id=#{id} and version = #{version}
	</update>
	<select id="findOne" parameterType="long" resultType="BangZhuDO">
		SELECT
		<include refid="all_columns" />
		FROM bangzhu WHERE ID=#{id}
	</select>
	<select id="findAll" resultType="BangZhuDO">
		SELECT
		<include refid="all_columns" />
		FROM bangzhu
	</select>
	<delete id="delete" parameterType="long">
		DELETE FROM bangzhu WHERE id=#{id}
	</delete>
	<delete id="deleteByIds">
		DELETE FROM bangzhu
		<where>
			ID in
			<foreach item="item" index="index" collection="list" open="("
				separator="," close=")">
				#{item}
			</foreach>
		</where>
	</delete>

	<select id="findList" resultType="BangZhuDO">
		SELECT
		<include refid="all_columns" />
		FROM bangzhu
		<include refid="where" />
		<include refid="orderById" />
		LIMIT #{offset}, #{size}
	</select>
	<select id="getByIds" parameterType="list" resultType="BangZhuDO">
		SELECT
		<include refid="all_columns" />
		FROM bangzhu
		<where>
			ID in
			<foreach item="item" index="index" collection="list" open="("
				separator="," close=")">
				#{item}
			</foreach>
		</where>
	</select>
	<select id="countList" resultType="long">
		SELECT count(1) FROM bangzhu
		<include refid="where" />
		<include refid="orderById" />
	</select>
	<select id="count" resultType="long">
		SELECT count(1) FROM bangzhu
		<include refid="orderById" />
	</select>
</mapper>

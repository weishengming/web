<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.weishengming.dao.mapper.HMGQMapper">
    <sql id="all_columns">
        ID,CREATEDATE,UPDATEDATE,VERSION,BIAOTI,DIJIGE,FUBIAOTI,MAOJI,NEIRONG
    </sql>
    <sql id="where" >
        <where>
                	<if test="id != null">
            	and ID = #{id}
            </if>
                	<if test="createDate != null">
            	and CREATEDATE = #{createDate}
            </if>
                	<if test="updateDate != null">
            	and UPDATEDATE = #{updateDate}
            </if>
                	<if test="version != null">
            	and VERSION = #{version}
            </if>
                	<if test="biaoti != null">
            	and BIAOTI = #{biaoti}
            </if>
                	<if test="dijige != null">
            	and DIJIGE = #{dijige}
            </if>
                	<if test="fubiaoti != null">
            	and FUBIAOTI = #{fubiaoti}
            </if>
                	<if test="maoji != null">
            	and MAOJI = #{maoji}
            </if>
                	<if test="neirong != null">
            	and NEIRONG = #{neirong}
            </if>
                </where>
    </sql>
    <sql id="orderById"> ORDER BY ID DESC </sql>
    <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="HMGQDO">
        INSERT INTO hmgq (<include refid="all_columns"/>
        ) VALUES 
        (#{id},#{createDate},#{updateDate},#{version},#{biaoti},#{dijige},#{fubiaoti},#{maoji},#{neirong})
    </insert>
    <update id="update" parameterType="HMGQDO">
        UPDATE hmgq SET
                    <![CDATA[ ID = #{id}]]>,   
                    <![CDATA[ CREATEDATE = #{createDate}]]>,   
                    <![CDATA[ UPDATEDATE = #{updateDate}]]>,   
                    <![CDATA[ VERSION = #{version}]]>,   
                    <![CDATA[ BIAOTI = #{biaoti}]]>,   
                    <![CDATA[ DIJIGE = #{dijige}]]>,   
                    <![CDATA[ FUBIAOTI = #{fubiaoti}]]>,   
                    <![CDATA[ MAOJI = #{maoji}]]>,   
                    <![CDATA[ NEIRONG = #{neirong}]]>,   
                version = version+1 
        WHERE
        id=#{id} and version = #{version}
    </update>
    <select id="findOne" parameterType="long" resultType="HMGQDO">
        SELECT <include refid="all_columns"/>
        FROM hmgq WHERE ID=#{id}
    </select>
    <select id="findAll" resultType="HMGQDO">
        SELECT <include refid="all_columns"/>
        FROM hmgq
    </select>
    <select id="findListByFubiaoti" parameterType="string" resultType="HMGQDO">
		SELECT
		<include refid="all_columns" />
		FROM hmgq WHERE FUBIAOTI = #{fubiaoti}
	</select>
    <delete id="delete" parameterType="long">
        DELETE FROM hmgq WHERE id=#{id}
    </delete>
    <delete id="deleteByIds">
        DELETE FROM hmgq
        <where>
            ID in
            <foreach item="item" index="index" collection="list" open="(" separator="," close=")">
                #{item}
            </foreach>
        </where>
    </delete>
    
    <select id="findList" resultType="HMGQDO">
        SELECT <include refid="all_columns"/>
        FROM hmgq
        <include refid="where"/> <include refid="orderById"/>
        LIMIT #{offset}, #{size}
    </select>
    <select id="getByIds" parameterType="list" resultType="HMGQDO">
        SELECT <include refid="all_columns"/>
        FROM hmgq
        <where>
            ID in
            <foreach item="item" index="index" collection="list" open="(" separator="," close=")">
                #{item}
            </foreach>
        </where>
    </select>
    <select id="countList" resultType="long">
        SELECT count(1) FROM hmgq <include refid="where"/> <include refid="orderById"/>
    </select>
    <select id="count" resultType="long">
        SELECT count(1) FROM hmgq  <include refid="orderById"/>
    </select>
</mapper>

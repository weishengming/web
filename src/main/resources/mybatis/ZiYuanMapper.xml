<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.weishengming.dao.mapper.ZiYuanMapper">
	<sql id="all_columns">
		ID,CREATEDATE,UPDATEDATE,VERSION,BEIZHU,DIZHI,NICKNAME,OPENID,TYPE
	</sql>
	<sql id="where">
		<where>
			<if test="id != null">
				and ID = #{id}
			</if>
			<if test="createDate != null">
				and CREATEDATE = #{createDate}
			</if>
			<if test="updateDate != null">
				and UPDATEDATE = #{updateDate}
			</if>
			<if test="version != null">
				and VERSION = #{version}
			</if>
			<if test="beizhu != null">
				and BEIZHU = #{beizhu}
			</if>
			<if test="dizhi != null">
				and DIZHI = #{dizhi}
			</if>
			<if test="nickname != null">
				and NICKNAME = #{nickname}
			</if>
			<if test="openID != null">
				and OPENID = #{openID}
			</if>
			<if test="type != null">
				and TYPE = #{type}
			</if>
		</where>
	</sql>
	<sql id="orderById"> ORDER BY ID DESC </sql>
	<insert id="insert" useGeneratedKeys="true" keyProperty="id"
		parameterType="ZiYuanDO">
		INSERT INTO ziyuan (
		<include refid="all_columns" />
		) VALUES
		(#{id},#{createDate},#{updateDate},#{version},#{beizhu},#{dizhi},#{nickname},#{openID},#{type})
	</insert>
	<update id="update" parameterType="ZiYuanDO">
		UPDATE ziyuan SET
                    <![CDATA[ ID = #{id}]]>,   
                    <![CDATA[ CREATEDATE = #{createDate}]]>,   
                    <![CDATA[ UPDATEDATE = #{updateDate}]]>,   
                    <![CDATA[ VERSION = #{version}]]>,   
                    <![CDATA[ BEIZHU = #{beizhu}]]>,   
                    <![CDATA[ DIZHI = #{dizhi}]]>,   
                    <![CDATA[ NICKNAME = #{nickname}]]>,   
                    <![CDATA[ OPENID = #{openID}]]>,   
                    <![CDATA[ TYPE = #{type}]]>,
		version = version+1 WHERE
		id=#{id} and version = #{version}
	</update>
	<select id="findOne" parameterType="long" resultType="ZiYuanDO">
		SELECT
		<include refid="all_columns" />
		FROM ziyuan WHERE ID=#{id}
	</select>
	<select id="findAll" resultType="ZiYuanDO">
		SELECT
		<include refid="all_columns" />
		FROM ziyuan
	</select>
	<delete id="delete" parameterType="long">
		DELETE FROM ziyuan WHERE id=#{id}
	</delete>
	<delete id="deleteByIds">
		DELETE FROM ziyuan
		<where>
			ID in
			<foreach item="item" index="index" collection="list" open="("
				separator="," close=")">
				#{item}
			</foreach>
		</where>
	</delete>

	<select id="findList" resultType="ZiYuanDO">
		SELECT
		<include refid="all_columns" />
		FROM ziyuan
		<include refid="where" />
		<include refid="orderById" />
		LIMIT #{offset}, #{size}
	</select>
	<select id="getByIds" parameterType="list" resultType="ZiYuanDO">
		SELECT
		<include refid="all_columns" />
		FROM ziyuan
		<where>
			ID in
			<foreach item="item" index="index" collection="list" open="("
				separator="," close=")">
				#{item}
			</foreach>
		</where>
	</select>
	<select id="countList" resultType="long">
		SELECT count(1) FROM ziyuan
		<include refid="where" />
		<include refid="orderById" />
	</select>
	<select id="count" resultType="long">
		SELECT count(1) FROM ziyuan
		<include refid="orderById" />
	</select>
</mapper>

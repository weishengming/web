<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.weishengming.dao.mapper.WenTiMapper">
	<sql id="all_columns">
		ID,CREATEDATE,UPDATEDATE,VERSION,KEHUID,KEHUZHANGHAO,WENTI
	</sql>
	<sql id="where">
		<where>
			<if test="id != null">
				and ID = #{id}
			</if>
			<if test="createDate != null">
				and CREATEDATE = #{createDate}
			</if>
			<if test="updateDate != null">
				and UPDATEDATE = #{updateDate}
			</if>
			<if test="version != null">
				and VERSION = #{version}
			</if>
			<if test="kehuid != null">
				and KEHUID = #{kehuid}
			</if>
			<if test="kehuzhanghao != null">
				and KEHUZHANGHAO = #{kehuzhanghao}
			</if>
			<if test="wenti != null">
				and WENTI = #{wenti}
			</if>
		</where>
	</sql>
	<sql id="orderById"> ORDER BY ID DESC </sql>
	<insert id="insert" useGeneratedKeys="true" keyProperty="id"
		parameterType="WenTiDO">
		INSERT INTO wenti (
		<include refid="all_columns" />
		) VALUES
		(#{id},#{createDate},#{updateDate},#{version},#{kehuid},#{kehuzhanghao},#{wenti})
	</insert>
	<update id="update" parameterType="WenTiDO">
		UPDATE wenti SET
                    <![CDATA[ ID = #{id}]]>,   
                    <![CDATA[ CREATEDATE = #{createDate}]]>,   
                    <![CDATA[ UPDATEDATE = #{updateDate}]]>,   
                    <![CDATA[ VERSION = #{version}]]>,   
                    <![CDATA[ KEHUID = #{kehuid}]]>,   
                    <![CDATA[ KEHUZHANGHAO = #{kehuzhanghao}]]>,   
                    <![CDATA[ WENTI = #{wenti}]]>,
		version = version+1 WHERE
		id=#{id} and version = #{version}
	</update>
	<select id="findOne" parameterType="long" resultType="WenTiDO">
		SELECT
		<include refid="all_columns" />
		FROM wenti WHERE ID=#{id}
	</select>
	<select id="findAll" resultType="WenTiDO">
		SELECT
		<include refid="all_columns" />
		FROM wenti
	</select>
	<select id="findListByKehuZhangHao" parameterType="string" resultType="WenTiDO">
		SELECT
		<include refid="all_columns" />
		FROM wenti WHERE KEHUZHANGHAO = #{kehuzhanghao}
	</select>
		<select id="findListByNotKehuZhangHao" parameterType="string" resultType="WenTiDO">
		SELECT
		<include refid="all_columns" />
		FROM wenti WHERE KEHUZHANGHAO != #{kehuzhanghao}
	</select>
	<delete id="delete" parameterType="long">
		DELETE FROM wenti WHERE id=#{id}
	</delete>
	<delete id="deleteByIds">
		DELETE FROM wenti
		<where>
			ID in
			<foreach item="item" index="index" collection="list" open="("
				separator="," close=")">
				#{item}
			</foreach>
		</where>
	</delete>

	<select id="findList" resultType="WenTiDO">
		SELECT
		<include refid="all_columns" />
		FROM wenti
		<include refid="where" />
		<include refid="orderById" />
		LIMIT #{offset}, #{size}
	</select>
	<select id="getByIds" parameterType="list" resultType="WenTiDO">
		SELECT
		<include refid="all_columns" />
		FROM wenti
		<where>
			ID in
			<foreach item="item" index="index" collection="list" open="("
				separator="," close=")">
				#{item}
			</foreach>
		</where>
	</select>
	<select id="countList" resultType="long">
		SELECT count(1) FROM wenti
		<include refid="where" />
		<include refid="orderById" />
	</select>
	<select id="count" resultType="long">
		SELECT count(1) FROM wenti
		<include refid="orderById" />
	</select>
</mapper>

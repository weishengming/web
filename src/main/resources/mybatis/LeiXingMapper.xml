<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.weishengming.dao.mapper.LeiXingMapper">
    <sql id="all_columns">
        ID,CREATEDATE,UPDATEDATE,VERSION,FUID,FUMINGCHENG,JIBIE,MINGCHENG,PAIXU,SHIFOUQIYONG
    </sql>
    <sql id="where" >
        <where>
                	<if test="id != null">
            	and ID = #{id}
            </if>
                	<if test="createDate != null">
            	and CREATEDATE = #{createDate}
            </if>
                	<if test="updateDate != null">
            	and UPDATEDATE = #{updateDate}
            </if>
                	<if test="version != null">
            	and VERSION = #{version}
            </if>
                	<if test="fuid != null">
            	and FUID = #{fuid}
            </if>
                	<if test="fumingcheng != null">
            	and FUMINGCHENG = #{fumingcheng}
            </if>
                	<if test="jibie != null">
            	and JIBIE = #{jibie}
            </if>
                	<if test="mingcheng != null">
            	and MINGCHENG = #{mingcheng}
            </if>
                	<if test="paixu != null">
            	and PAIXU = #{paixu}
            </if>
                	<if test="shifouqiyong != null">
            	and SHIFOUQIYONG = #{shifouqiyong}
            </if>
                </where>
    </sql>
    <sql id="orderById"> ORDER BY ID DESC </sql>
    <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="LeiXingDO">
        INSERT INTO leixing (<include refid="all_columns"/>
        ) VALUES 
        (#{id},#{createDate},#{updateDate},#{version},#{fuid},#{fumingcheng},#{jibie},#{mingcheng},#{paixu},#{shifouqiyong})
    </insert>
    <update id="update" parameterType="LeiXingDO">
        UPDATE leixing SET
                    <![CDATA[ ID = #{id}]]>,   
                    <![CDATA[ CREATEDATE = #{createDate}]]>,   
                    <![CDATA[ UPDATEDATE = #{updateDate}]]>,   
                    <![CDATA[ VERSION = #{version}]]>,   
                    <![CDATA[ FUID = #{fuid}]]>,   
                    <![CDATA[ FUMINGCHENG = #{fumingcheng}]]>,   
                    <![CDATA[ JIBIE = #{jibie}]]>,   
                    <![CDATA[ MINGCHENG = #{mingcheng}]]>,   
                    <![CDATA[ PAIXU = #{paixu}]]>,   
                    <![CDATA[ SHIFOUQIYONG = #{shifouqiyong}]]>,   
                version = version+1 
        WHERE
        id=#{id} and version = #{version}
    </update>
    <select id="findOne" parameterType="long" resultType="LeiXingDO">
        SELECT <include refid="all_columns"/>
        FROM leixing WHERE ID=#{id}
    </select>
    <select id="findAll" resultType="LeiXingDO">
        SELECT <include refid="all_columns"/>
        FROM leixing
    </select>
    <delete id="delete" parameterType="long">
        DELETE FROM leixing WHERE id=#{id}
    </delete>
    <delete id="deleteByIds">
        DELETE FROM leixing
        <where>
            ID in
            <foreach item="item" index="index" collection="list" open="(" separator="," close=")">
                #{item}
            </foreach>
        </where>
    </delete>
    
    <select id="findList" resultType="LeiXingDO">
        SELECT <include refid="all_columns"/>
        FROM leixing
        <include refid="where"/> <include refid="orderById"/>
        LIMIT #{offset}, #{size}
    </select>
    <select id="getByIds" parameterType="list" resultType="LeiXingDO">
        SELECT <include refid="all_columns"/>
        FROM leixing
        <where>
            ID in
            <foreach item="item" index="index" collection="list" open="(" separator="," close=")">
                #{item}
            </foreach>
        </where>
    </select>
    <select id="countList" resultType="long">
        SELECT count(1) FROM leixing <include refid="where"/> <include refid="orderById"/>
    </select>
    <select id="count" resultType="long">
        SELECT count(1) FROM leixing  <include refid="orderById"/>
    </select>
</mapper>

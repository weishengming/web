<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
     http://www.springframework.org/schema/beans 
     http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
	<bean id="userDataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
		<property name="driverClassName" value="${jdbc.user.driver}" />
		<property name="url" value="${jdbc.user.url}" />
		<property name="username" value="${jdbc.user.username}" />
		<property name="password" value="${jdbc.user.password}" />

		<property name="initialSize" value="${dbcp.user.initialSize}" />
		<property name="maxActive" value="${dbcp.user.maxActive}" />
		<property name="maxIdle" value="${dbcp.user.maxIdle}" />
	</bean>

    <!-- com.weishengming.dao.entity;com.weishengming.dao.entity -->
	<!-- define the SqlSessionFactory -->
	<bean id="userSqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="userDataSource" />
		<property name="typeAliasesPackage"
			value="com.weishengming.user.dao.entity" />
		<property name="mapperLocations" value="classpath*:usermybatis/**/*Mapper.xml" />
		<property name="configLocation" value="classpath:mybatis-user-config.xml"></property>
	</bean>

	<!-- scan for mappers and let them be autowired -->
	<!-- com.weishengming.dao.mapper;com.weishengming.dao.mapper -->
	<bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
		<property name="sqlSessionFactoryBeanName" value="userSqlSessionFactory"></property>
		<property name="basePackage" value="com.weishengming.user.dao.mapper" />
	</bean>
	 
</beans>